# frozen_string_literal: true

require "increase/resource"

module Increase
  class <%= class_name %> < Resource
    NAME = <%= name.inspect %>
    API_NAME = <%= api_name.inspect %>

    <%- operations.each do |op| -%>
    # <%= op[:details]['summary'] %>
    <%- if op[:alias] -%>
    <%= op[:alias] -%>
    <%- else -%>
    endpoint <%= op[:operation].inspect %>, <%= op[:http_method].inspect %>, path: <%= op[:path].inspect -%>
    <%- end -%><%# close if %>
    <%- end %><%# close loop %>  end
end
